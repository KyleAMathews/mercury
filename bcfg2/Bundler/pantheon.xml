<Bundle name='pantheon'>

   <Path name='/etc/pantheon/boot.d/S100main.sh' altsrc='/pantheon/S100main.sh'/>
   <Path name='/etc/pantheon/init.sh' altsrc='/pantheon/init.sh'/>
   <Path name='/etc/pantheon/pantheon.make'/>
   <Path name='/etc/pantheon/templates/cron' altsrc='/pantheon/cron'/>
   <Path name='/etc/pantheon/templates/iptables' altsrc='/pantheon/iptables'/>
   <Path name='/etc/pantheon/templates/tuneables' altsrc='/pantheon/tuneables'/>
   <Path name='/etc/pantheon/update_scripts_config' altsrc='/pantheon/update_scripts_config'/>
   <Path name='/usr/local/bin/update_code_from_dev_to_test' altsrc='/pantheon/update_code_from_dev_to_test'/>
   <Path name='/usr/local/bin/update_code_from_test_to_live' altsrc='/pantheon/update_code_from_test_to_live'/>
   <Path name='/usr/local/bin/update_db_from_live_to_test' altsrc='/pantheon/update_db_from_live_to_test'/>
   <Path name='/usr/local/bin/update_db_from_test_to_dev' altsrc='/pantheon/update_db_from_test_to_dev'/>
   <Path name='/usr/local/bin/update_files_from_live_to_test' altsrc='/pantheon/update_files_from_live_to_test'/>
   <Path name='/usr/local/bin/update_files_from_test_to_dev' altsrc='/pantheon/update_files_from_test_to_dev'/>
   <Path name='/usr/local/bin/update_pantheon' altsrc='/pantheon/update_pantheon'/>
   <Path name='/usr/local/bin/update_pressflow' altsrc='/pantheon/update_pressflow'/>

   <BoundPath type='directory' owner='root' group='root' perms='0700' name='/etc/pantheon/logs'/>

   <!-- AWS Only -->
   <Group name='amazon-web-services'>      
     <!-- Lucid -->
     <Group name='lucid'>
       <Path name='/home/ubuntu/CHANGELOG.txt' altsrc='/root/CHANGELOG.txt'/>
       <Path name='/home/ubuntu/README.txt' altsrc='/root/README.txt'/>
     </Group>
     <!-- Non-Lucid -->
     <Group name='lucid' negate='true'>
       <Path name='/root/CHANGELOG.txt'/>
       <Path name='/root/README.txt'/>
     </Group>
   </Group>
   
   <!-- VPS (Generic Host) -->
   <Group name='vps'>
     <Path name='/root/CHANGELOG.txt'/>
     <Path name='/root/README.txt'/>
   </Group>

  <!-- Ubuntu/Deb Only -->
  <Group name='deb'>
    <Path name='/etc/motd.tail' altsrc='/etc/motd'/>
    <Path name='/etc/rc.local' altsrc='/pantheon/rc.local'/>
  </Group>

  <!-- CentOS Only -->
  <Group name='centos'>
    <Path name='/etc/motd'/>
    <Path name='/etc/rc.d/rc.local' altsrc='/pantheon/rc.local'/>
  </Group>
</Bundle>

