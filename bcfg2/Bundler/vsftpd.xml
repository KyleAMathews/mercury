<Bundle name ='vsftpd'>
  
  <Package name='vsftpd'/>  
  <Service name='vsftpd'/>
 
  <Group name='deb'>
    <Path name='/etc/vsftpd.conf' altsrc='/vsftpd/conf'/>
    <BoundPath type='directory' name='/srv/ftp/pantheon' owner='root' group='root' perms='0755'/>
  </Group>

  <Group name = 'centos'>
    <Path name='/etc/vsftpd/vsftpd.conf' altsrc='/vsftpd/conf'/>
    <BoundPath type='directory' name='/var/ftp/pantheon' owner='root' group='root' perms='0755'/>
  </Group> 

</Bundle>
