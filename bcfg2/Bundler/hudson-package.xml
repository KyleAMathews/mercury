<Bundle name='hudson-package'>

  <!-- All Distros -->
  <Package name='hudson'/>
  <Path name='/var/lib/hudson/config.xml' altsrc='/hudson/config.xml'/>
  <Path name='/var/lib/hudson/plugins/postbuild-task.hpi'/>
    
  <!--Ubuntu Only -->
  <Group name='ubuntu'>
    <Package name='daemon'/>
    <Package name='gcj-4.4-base'/>
    <Package name='gcj-4.4-jre-headless'/>
    <Package name='libgcj10'/>
  </Group>
  
  <!--Debian/Ubuntu Only -->
  <Group name='deb'>
    <Path name='/etc/default/hudson' altsrc='/hudson/conf'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs' owner='hudson' group='nogroup' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/plugins' owner='hudson' group='nogroup' perms='0755'/>
  </Group>

  <!--Centos Only -->
  <Group name='centos'>
    <Path name='/etc/sysconfig/hudson' altsrc='/hudson/conf'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs' owner='hudson' group='hudson' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/plugins' owner='hudson' group='hudson' perms='0755'/>
  </Group>

</Bundle>
