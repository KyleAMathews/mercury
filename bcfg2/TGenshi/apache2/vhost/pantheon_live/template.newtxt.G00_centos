<VirtualHost *:8080>
	ServerAdmin webmaster@localhost
	ServerName live.pantheon.*
	ServerAlias *.live.pantheon.*

	DocumentRoot /var/www/html/pantheon/live
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory /var/www/html/pantheon/live>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>
