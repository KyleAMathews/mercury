<Rules priority='1'>

  <Group name='centos'>

  <!-- ACTIONS -->

    <Action timing='post' when='always' name='vnstat_db_eth0' command='vnstat -u -i eth0' status='ignore'/>

  <!-- PATHS -->

    <Path name='/var/lib/tomcat5/common/endorsed/xalan-j2.jar' type='symlink' to='/usr/share/java/xalan-j2.jar'/>

  <!-- SERVICES -->

    <!-- BCFG2 -->
    <Service type='chkconfig' status='on' name='bcfg2'/>
    <Service type='chkconfig' status='on' name='bcfg2-server'/>
    
    <!-- Httpd -->
    <Service type='chkconfig' status='on' name='httpd'/>

    <!-- Memcached -->
    <Service type='chkconfig' status='on' name='memcached'/>

    <!-- MySQL -->
    <Service type='chkconfig' status='on' name='mysqld'/>

    <!-- Postfix -->
    <Service type='chkconfig' status='on' name='postfix'/>

    <!-- Tomcat -->
    <Service type='chkconfig' status='on' name='tomcat5'/>

    <!-- Varnish -->
    <Service type='chkconfig' status='on' name='varnish'/>
    <Service type='chkconfig' status='on' name='varnishlog'/>
    <Service type='chkconfig' status='on' name='varnishncsa'/>

    <!-- CentOS -->
    <Service type='chkconfig' status='on' name='crond'/>
    <Service type='chkconfig' status='off' name='iptables'/>
    <Service type='chkconfig' status='on' name='lvm2-monitor'/>
    <Service type='chkconfig' status='on' name='mcstrans'/>
    <Service type='chkconfig' status='on' name='messagebus'/>
    <Service type='chkconfig' status='on' name='netfs'/>
    <Service type='chkconfig' status='on' name='network'/>
    <Service type='chkconfig' status='on' name='rawdevices'/>
    <Service type='chkconfig' status='on' name='restorecond'/>
    <Service type='chkconfig' status='on' name='sshd'/>
    <Service type='chkconfig' status='on' name='syslog'/>

  </Group>

</Rules>

