<Bundle name ='tools'>

  <!-- Tools -->
  <Package name='bzr'/>
  <Package name='cvs'/>
  <Package name='screen'/>
  <Package name='subversion'/>
  <Package name='unzip'/>
  <Package name='vnstat'/>

  <Action name='vnstat_db_eth0'/>

  <!-- Ubuntu/Deb Only -->
  <Group name='deb'>
    <Service name='vnstat'/>
    <Action name='restart_apparmor'/>
  </Group>

  <!-- CentOS Only -->
  <Group name='centos'>
    <Path name='/etc/cron.d/vnstat' altsrc='/vnstat/cron'/>
  </Group>
</Bundle>
