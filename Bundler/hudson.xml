<Bundle name='hudson'>

  <!-- All Distros -->
  <Package name='hudson'/>
  <Service name='hudson'/>
  <Path name='/var/lib/hudson/jobs/mercury_init/config.xml' altsrc='/hudson/jobs/mercury_init/config.xml'/>
  <BoundPath type='directory' name='/var/lib/hudson/jobs/mercury_init' owner='hudson' group='nogroup' perms='0755'/>

  <!--Ubuntu Only -->
  <Group name='ubuntu'>
    <Package name='daemon'/>
    <Package name='gcj-4.4-base'/>
    <Package name='gcj-4.4-jre-headless'/>
    <Package name='libgcj10'/>
  </Group>
  
</Bundle>
