<Bundle name='mercury'>

   <Path name='/usr/local/bin/update_mercury.sh'/>
   <Path name='/usr/local/bin/update_pressflow.sh'/>
   <Path name='/etc/mercury/boot.d/S100main.sh'/>
   <Path name='/etc/mercury/cron.template'/>
   <Path name='/etc/mercury/tuneables.template'/>

   <!-- AWS Only -->
   <Group name='amazon-web-services'>      
     <Path name='/home/ubuntu/CHANGELOG.txt' altsrc='/root/CHANGELOG.txt'/>
     <Path name='/home/ubuntu/mercury.make' altsrc='/root/mercury.make'/>
     <Path name='/home/ubuntu/README.txt' altsrc='/root/README.txt'/>
   </Group>
  
   <!-- VPS (Generic Host) -->
   <Group name='vps'>
     <Path name='/root/CHANGELOG.txt'/>
     <Path name='/root/mercury.make'/>
     <Path name='/root/README.txt'/>
   </Group>

  <!-- Ubuntu/Deb Only -->
  <Group name='deb'>
    <Path name='/etc/mercury/init.sh' altsrc='/mercury/init.sh'/>
    <Path name='/etc/motd.tail' altsrc='/etc/motd'/>
    <Path name='/etc/rc.local' altsrc='/mercury/rc.local'/>
  </Group>

  <!-- CentOS Only -->
  <Group name='centos'>
    <Path name='/etc/mercury/init.sh' altsrc='/mercury/init.sh'/>
    <Path name='/etc/motd'/>
    <Path name='/etc/rc.d/rc.local' altsrc='/mercury/rc.local'/>
  </Group>
</Bundle>

