#!/bin/bash
#If you wish to replace our default value for mysql paths in /etc/apparmor.d/usr.sbin.mysqld,
#edit the APPARMOR_MYSQLD variable in /etc/mercury/tuneable_configs

if [[ -a /etc/mercury/tuneable_configs ]]; then
. /etc/mercury/tuneable_configs
fi

if [[ -n "$APPARMOR_MYSQLD" ]]; then
    echo "$APPARMOR_MYSQLD"
else
    echo "/mnt/mysql/lib/ r,"
    echo "/mnt/mysql/lib/** rwk,"
    echo "/mnt/mysql/log/ r,"
    echo "/mnt/mysql/log/* rw,"
    echo "/mnt/mysql/tmp/ rw,"
    echo "/mnt/mysql/tmp/** rwkl,"
fi


