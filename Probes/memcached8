#!/bin/sh
#set apc memory usage

MEM=`/var/lib/bcfg2/Probes/get_ram.sh`

case "$MEM" in
    50GB)
        echo "3200"
	;;
    25GB)
        echo "1600"
	;;
    15GB)
	echo "960"
	;;
    8GB)
	echo "512"
	;;
    4GB)
	echo "256"
	;;
    2GB)
	echo "128"
	;;
    1GB)
	echo "64"
	;;
    500MB)
	echo "32"
	;;
esac
