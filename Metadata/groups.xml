<Groups version='3.0'>

  <!--Ubuntu on AWS-->
  <Group profile='true' public='true' default='true' name='mercury-ubuntu--aws'>
    <Group name='mercury'/>
    <Group name='amazon-web-services'/>
    <Group name='bcfg2'/>
  </Group>
  
  <!--Ubuntu on Rackspace/Linode-->
  <Group profile='true' public='true' default='true' name='mercury-ubuntu-vps'>
    <Group name='mercury'/>
    <Group name='vps'/>
    <Group name='bcfg2'/>
  </Group>

  <!-- Operating systems -->
  <Group name='ubuntu-jaunty'>
    <Group name='jaunty'> 
    <Group name='ubuntu'/>
    <Bundle name='ubuntu-jaunty'/>
  </Group>
  <Group name='ubuntu-karmic'>
    <Group name='karmic'> 
    <Group name='ubuntu'/>
    <Bundle name='ubuntu-karmic'/>
  </Group>
  <Group name='ubuntu-lucid'>
    <Group name='lucid'>
    <Group name='ubuntu'/>
    <Bundle name='ubuntu-lucid'/>
  </Group>
  <Group name='ubuntu'/>
  <Group name='debian'/>
  <Group name='freebsd'/>
  <Group name='gentoo'/>
  <Group name='redhat'/>
  <Group name='suse'/>
  <Group name='mandrake'/>
  <Group name='solaris'/>

  <!-- pantheon server types -->
  <Group name='mercury'>
    <Bundle name='mercury'/>
    <Bundle name='memcached'/>
    <Bundle name='postfix'/>
    <Bundle name='tomcat6'/>
    <Bundle name='varnish'/>
    <Bundle name='cacti-client'/>
  </Group>
  
  <!-- hosting providers -->
  <Group name='amazon-web-services'>
    <Bundle name='amazon-web-services'/>
  </Group>  
  <Group name='vps'>
    <Bundle name='vps'/>
  </Group>
  
  <!-- other options -->
  <Group name='i386'>
    <Bundle name='i386'/>
  </Group>
  <Group name='amd64'>
    <Bundle name='amd64'/>
  </Group>

  <Group name='bcfg2'>
    <Bundle name='bcfg2'/>
  </Group>
</Groups>
